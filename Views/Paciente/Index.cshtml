@model List<WebApplication1.Models.Paciente>

<h1>Lista de Pacientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.Id</td>
                <td>@paciente.Nombre</td>
                <td>
                    <a asp-action="Details" asp-route-id="@paciente.Id" class="btn btn-primary">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@paciente.Id" class="btn btn-primary">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@paciente.Id" class="btn btn-primary">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Crear Nuevo Paciente</a>
